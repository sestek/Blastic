<UserControl x:Class="WpfTemplate.UserInterface.Settings.Workspace.WorkspaceSettingsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:controls="clr-namespace:WpfTemplate.Controls"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:help="clr-namespace:WpfTemplate.Controls.Help"
			 xmlns:local="clr-namespace:WpfTemplate.UserInterface.Settings.Workspace"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d"
			 d:DataContext="{d:DesignInstance local:WorkspaceSettingsViewModel}">
	<Grid>
		<help:HelpView VerticalContentAlignment="Center"
					   HelpContent="{x:Static local:WorkspaceSettingsViewModel.WorkspaceFolderHelp}">

			<controls:FilePicker DialogService="{Binding ExecutionContext.DialogService}"
								 IsFolderPicker="True"
								 Label="Workspace Folder"
								 Path="{Binding Path, ValidatesOnDataErrors=True}" />
		</help:HelpView>
	</Grid>
</UserControl>