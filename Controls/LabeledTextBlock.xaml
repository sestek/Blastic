<local:LabeledControl x:Class="WpfTemplate.Controls.LabeledTextBlock"
					  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
					  xmlns:local="clr-namespace:WpfTemplate.Controls"
					  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
					  mc:Ignorable="d">
	<TextBlock FontWeight="Light"
			   Text="{Binding Text, RelativeSource={RelativeSource AncestorType=local:LabeledTextBlock}}" />
</local:LabeledControl>