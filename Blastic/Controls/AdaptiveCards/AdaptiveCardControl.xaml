<UserControl x:Class="Blastic.Controls.AdaptiveCards.AdaptiveCardControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:adaptiveCards="clr-namespace:Blastic.Controls.AdaptiveCards"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d">
	<Grid>
		<materialDesign:Card>
			<ScrollViewer VerticalScrollBarVisibility="Auto">
				<ContentControl Content="{Binding RenderedCardContent, RelativeSource={RelativeSource AncestorType=adaptiveCards:AdaptiveCardControl}}" />
			</ScrollViewer>
		</materialDesign:Card>
	</Grid>
</UserControl>