<UserControl x:Class="Blastic.UserInterface.Logs.Settings.LogSettingsView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:help="clr-namespace:Blastic.Controls.Help"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:settings="clr-namespace:Blastic.UserInterface.Logs.Settings"
			 xmlns:controls="clr-namespace:Forge.Forms.Controls;assembly=Forge.Forms"
			 mc:Ignorable="d"
			 d:DataContext="{d:DesignInstance settings:LogSettingsViewModel}">
	<StackPanel>

		<help:HelpView VerticalContentAlignment="Center"
					   HelpContent="{Binding OpenWindowOnError.Help}">
			<controls:DynamicForm Model="{Binding OpenWindowOnError}" />
		</help:HelpView>
	</StackPanel>
</UserControl>