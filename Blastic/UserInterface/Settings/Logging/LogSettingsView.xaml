<UserControl
	x:Class="Blastic.UserInterface.Settings.Logging.LogSettingsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="clr-namespace:Blastic.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:help="clr-namespace:Blastic.Controls.Help"
	xmlns:local="clr-namespace:Blastic.UserInterface.Settings.Logging"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DataContext="{d:DesignInstance local:LogSettingsViewModel}"
	mc:Ignorable="d">
	<Grid>
		<help:HelpView VerticalContentAlignment="Center" HelpContent="{Binding OpenWindowOnError.Help}">
			<controls:LabeledControl Label="{Binding OpenWindowOnError.Label}">
				<CheckBox IsChecked="{Binding OpenWindowOnError.SettingValue, ValidatesOnDataErrors=True}" />
			</controls:LabeledControl>
		</help:HelpView>
	</Grid>
</UserControl>